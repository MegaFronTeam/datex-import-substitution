mixin sTable(data)
	// start sTable
	+b.SECTION.sTable.section#sTable&attributes(attributes)
		.container
			+b.section-title.text-center
				h2.h1 #[span Аналоги иностранного ПО]<br>для пользователей
			+e.slider--js.swiper 
				.swiper-wrapper
					+e.table-wrap.swiper-slide
						table
							tr
								th
									+e.wrap
										+icon('cross')
										+e.text-wrap
											p Программное обеспечение
								th 
									+e.wrap
										+icon('apply')
										+e.text-wrap
											p Аналог
								th Стоимость аналога ПП
								th Трудозатраты, нормо-часы
