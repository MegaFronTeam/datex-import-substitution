								td
									+e.wrap
										+img('img/yandex-logo.png')
										+e.text-wrap
											p Yandex Браузер 22.3.0
								td Бесплатное ПО
								td 1
							tr
								td
									+e.wrap
										+img('img/symantec-logo.png')
										+e.text-wrap
											p Антивирус Symantec
